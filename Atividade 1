package USCS; 

public class Empregado  {
   
    
    public int codEmpregado ;
    public double salario;
    public String nome;
    public String cargo;

    public Empregado(int codEmpregado, double salario, String nome, String cargo) {
        this.codEmpregado = codEmpregado;
        this.salario = salario;
        this.nome = nome;
        this.cargo = cargo;
    }
    public Empregado(){
    }
    public void ImprimeEmpregado(){
    System.out.println(codEmpregado);
    System.out.println(salario);
    System.out.println(cargo);
    System.out.println(nome);
    System.out.println(TotalEmpregados);
    }
    }
  























